<configuration>
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://jx-bd-hadoop00.lianjia.com:9000/hbase</value>
    </property>

    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>

    <property>
        <name>hbase.master.port</name>
        <value>16000</value>
    </property>

    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>jx-bd-off-hadoop00.lianjia.com,jx-bd-off-hadoop01.lianjia.com,jx-bd-hadoop04.lianjia.com,jx-bd-hadoop03.lianjia.com,jx-bd-hadoop02.lianjia.com</value>
    </property>

    <property>
        <name>hbase.tmp.dir</name>
        <value>${hbase.tmp.dir}</value>
    </property>

    <property>
        <name>fail.fast.expired.active.master</name>
        <value>true</value>
    </property>

    <property>
        <name>hbase.regionserver.handler.count</name>
        <value>64</value>
    </property>

    <property>
        <name>hbase.hregion.max.filesize</name>
        <value> 1073741824 </value>
    </property>

    <property>
        <name>hbase.client.write.buffer</name>
        <value>8388608</value>
    </property>
</configuration>
